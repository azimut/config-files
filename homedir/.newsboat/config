auto-reload            yes
suppress-first-reload  yes
confirm-exit           yes
cleanup-on-quit        no
goto-next-feed         no
browser                "weblauncher %u"
cache-file             ~/.newsboat/cache.db
error-log              ~/.newsboat/error.log
scrolloff              2
#
# Bookmarking
#
bookmark-autopilot yes
bookmark-cmd /usr/local/share/doc/newsboat/examples/example-bookmark-plugin.sh
bookmark-interactive no

#
# Networking
#
reload-threads          1
reload-time            45
download-timeout       60
download-retries        4
proxy                  127.0.0.1:9050
proxy-type             socks5
use-proxy              yes

#
# Keybindings
#
unbind-key Q
bind-key ESC hard-quit

bind-key j down      feedlist
bind-key k up        feedlist
bind-key j next      articlelist
bind-key k prev      articlelist
bind-key J next-feed articlelist
bind-key K prev-feed articlelist
bind-key j down      article
bind-key k up        article

#
# Theme
#
color listnormal        default default
color listnormal_unread default default
color listfocus         default default reverse bold
color listfocus_unread  default default reverse bold
color info              default default #reverse
color background        default default
color article           default default

#
# Macros
#
macro o set browser "firefox %u"                             ; open-in-browser ; set browser "weblauncher %u"
macro y set browser "echo -n %u | xclip -selection clipboard"; open-in-browser ; set browser "weblauncher %u"
macro p set browser "mpv --player-operation-mode=pseudo-gui -- %u &"; one      ; set browser "weblauncher %u"
